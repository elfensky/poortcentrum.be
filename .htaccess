RewriteEngine On
Options +FollowSymLinks

# REDIRECT DEMO.POORTCENTRUM TO /404
# Legacy to redirect old search engine links to new website
RewriteCond %{HTTP_HOST} ^demo\.poortcentrum\.be
RewriteRule ^(.*)$ 404/%1/$1 [L,NC,QSA]

# # ## REMOVE WWW & FORCE HTTPS
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [OR]
# RewriteCond %{https} off
